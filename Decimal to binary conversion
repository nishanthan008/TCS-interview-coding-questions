 #include <iostream>
#include<cmath>
using namespace std;
int main()
{
    int dec,rem;
    string bin="";
    cout<<"Decimal to binary conversion"<<endl;
    cout<<"enter your decimal number:";
    cin>>dec;
    while(dec!=0)
    {
       if(dec%2==0)
       {
           bin='0'+bin;
       }
       else
       {
           bin='1'+bin;
       }
       dec=dec/2;
    }
    cout<<"Binary number:"<<bin;
}
